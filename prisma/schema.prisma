datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Denuncia {
  id        Int      @id @default(autoincrement())
  ticketId  String   @unique
  password  String
  mensaje   String
  estado    String   @default("Pendiente")
  respuesta String   @default("")
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("usersTandem") // Esto hace que la tabla se llame usersTandem en MySQL
}